  <button onclick="Test()" class="btn btn-primary">Click me</button>
  
  <script>
    function Test() {
      const spans = document.querySelectorAll('.customerimg2 span');
      spans.forEach(span => {
        if (span.children.length === 0) {
          span.remove();
        }
      });
    }
  </script>
  


